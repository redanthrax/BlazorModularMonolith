@page "/"
@attribute [AllowAnonymous]

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Blazor Modular Monolith</MudText>
<MudText Typo="Typo.body1" Class="mb-4">A modern modular monolith application built with Blazor WebAssembly and MudBlazor.</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.Book" Size="Size.Large" Color="Color.Primary" />
                    <MudText Typo="Typo.h6">Comics</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Manage your comic book collection with ease.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/comics">View Comics</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.Inbox" Size="Size.Large" Color="Color.Secondary" />
                    <MudText Typo="Typo.h6">Boxes</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Organize your comics into storage boxes.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Secondary" Href="/boxes">View Boxes</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Large" Color="Color.Tertiary" />
                    <MudText Typo="Typo.h6">About</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Built with .NET 10, Wolverine, and PostgreSQL.</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
